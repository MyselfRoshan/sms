<?xml version="1.0" encoding="UTF-8"?>
<Server port="8005" shutdown="SHUTDOWN">

  <!-- Global Server Configuration -->
  <GlobalNamingResources>

    <!-- Global Resources (databases, etc.) -->
    <!-- Example:
    <Resource name="jdbc/MyDB" auth="Container" type="javax.sql.DataSource"
              maxTotal="20" maxIdle="10" maxWaitMillis="10000"
              username="user" password="password" driverClassName="com.mysql.cj.jdbc.Driver"
              url="jdbc:mysql://localhost:3306/mydb"/>
    -->

  </GlobalNamingResources>

  <!-- Service Configuration -->
  <Service name="Catalina">

    <!-- A Connector for HTTP on port 8080 -->
    <Connector port="8080" protocol="HTTP/1.1"
               connectionTimeout="20000"
               redirectPort="8443" />

    <!-- A Connector for AJP (Apache JServ Protocol) on port 8009 -->
    <!-- <Connector port="8009" protocol="AJP/1.3"
               redirectPort="8443" /> -->

    <!-- Engine Configuration -->
    <Engine name="Catalina" defaultHost="localhost">

      <!-- Host Configuration -->
      <Host name="localhost"  appBase="webapps"
            unpackWARs="true" autoDeploy="true">

        <!-- Context Configuration -->
        <Context path="" docBase="${catalina.base}/webapps/ROOT"/>

      </Host>
    </Engine>
  </Service>
</Server>
